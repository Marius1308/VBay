<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.wirvsvirus.vbay.frontend.SignUp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp"
    tools:ignore="MissingConstraints">

    <TextView
      android:id="@+id/textView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="44dp"
      android:text="SignUp"
      android:textAlignment="center"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0"
        android:gravity="center_horizontal" />

    <EditText
      android:id="@+id/etVorname"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:ems="10"
      android:hint="Vorname"
      android:inputType="textPersonName" />

    <EditText
      android:id="@+id/etName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:ems="10"
      android:hint="Name"
      android:inputType="textPersonName"
      android:singleLine="false" />

    <EditText
      android:id="@+id/etPasswort"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:ems="10"
      android:hint="Passwort"
      android:inputType="textPassword" />

    <EditText
      android:id="@+id/etEmail"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:ems="10"
      android:hint="E-Mail"
      android:inputType="textEmailAddress" />

    <EditText
      android:id="@+id/etTele"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:ems="10"
      android:hint="Telefonnummer"
      android:inputType="phone" />

    <EditText
      android:id="@+id/etAdresse"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:ems="10"
      android:hint="Adresse"
      android:inputType="textPostalAddress" />

    <EditText
      android:id="@+id/etPlz"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:ems="10"
      android:hint="Plz"
      android:inputType="number" />

    <EditText
      android:id="@+id/etOrt"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:ems="10"
      android:hint="Ort"
      android:inputType="textPersonName" />

    <EditText
      android:id="@+id/etAdressZusatz"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:ems="10"
      android:hint="Adresszusatz"
      android:inputType="textPersonName" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="Hilfe:"
        android:textAlignment="center"
        android:textStyle="bold" />

      <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:showText="true"
        android:splitTrack="true"
        android:textOff="benÃ¶tigen"
        android:textOn="anbieten"
        tools:checked="false" />
    </LinearLayout>

    <Button
      android:id="@+id/enterButtton"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Enter" />

    <Button
      android:id="@+id/login"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="zum Login" />
  </LinearLayout>

</android.support.constraint.ConstraintLayout>
