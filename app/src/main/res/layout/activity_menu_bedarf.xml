<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.wirvsvirus.vbay.frontend.MenuBedarf">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
      android:id="@+id/Menu"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Menu" />

    <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="50">

      <LinearLayout
        android:id="@+id/textAuftaegeBearbeitet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
          android:id="@+id/textView7"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Aufträge in Bearbeitung:" />
      </LinearLayout>
    </ScrollView>

    <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="50">

      <LinearLayout
        android:id="@+id/textAuftraegeWarten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
          android:id="@+id/textView8"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Wartende Aufträge:" />
      </LinearLayout>
    </ScrollView>

    <Button
      android:id="@+id/neueListe"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Neuer Einkauf" />
  </LinearLayout>
</android.support.constraint.ConstraintLayout>
